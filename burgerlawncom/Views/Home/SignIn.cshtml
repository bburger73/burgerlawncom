
@{
    ViewBag.Title = "SignIn";

    @functions{
        public string runButtonPress()
        {
            ViewBag.Title = "RunPressed";
            return "RunPressed";
        }
    }
}

<div class="signin">
    <h2>Sign In:</h2>
    <h3>@ViewBag.Title</h3>
    <label for="email">Email</label>
    <input placeholder="email" id="email" />
    <label for="password">Password</label>
    <input placeholder="******" id="password" />
    <button class="abuttonmod" onclick="RazorFunction()">Sign In</button>
    <a class="abuttonmod" href="./SignUp">Sign Up</a>
    <a class="alink" href="./Forgot">Forgot?</a>
</div>


@section Scripts
{
    <script>
    function RazorFunction() {
        $("h3").html('@runButtonPress()');
    }

    </script>
} 